{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"globalReturn": false,
			"impliedStrict": true,
			"jsx": false,
			"experimentalObjectRestSpread": true
		}
	},
	"parser": "babel-eslint",
	"rules": {
		"indent": ["error", 4, { "SwitchCase": 1 }],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": 0,
		"strict": 1,
        "no-constant-condition": "off"
	}
}
